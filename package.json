{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bunx @tailwindcss/cli -i src/input.css -o src/index.css --watch & bun --hot src/index.tsx",
    "dev:css": "bunx @tailwindcss/cli -i src/input.css -o src/index.css --watch",
    "build:css": "bunx @tailwindcss/cli -i src/input.css -o src/index.css --minify",
    "build": "bun run build:css && bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/index.tsx"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.9.1",
    "framer-motion": "^12.34.0",
    "react": "^19",
    "react-dom": "^19",
    "react-intersection-observer": "^10.0.2",
    "react-type-animation": "^3.2.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest"
  }
}
